<% if alert.present? %>
  <div class='alert'>
    <div class='alert alert-danger'>
      <i class='glyphicon glyphicon-warning-sign'></i>
      <a class="close" data-dismiss="alert" href='#' aria-hidden="true">&times;</a>
      <%= alert %>
    </div>
  </div>
<% end %>

<% if notice.present? %>
  <div class='notice'>
    <div class='alert alert-success'>
      <i class='glyphicon glyphicon-ok'></i>
      <a class="close" data-dismiss='alert' href='#' aria-hidden="true">&times;</a>
      <%= notice %>
    </div>
  </div>
<% end %>
