
<%= f.text_field :starts_at_date,
              placeholder: "Date",
              required: true, 
              class: 'datepicker form-control', 
              value: (f.object.format_date if f.object.starts_at) %>

<%= f.text_field :starts_at_time,
              placeholder: "Time",
              required: true,
              class: 'timepicker form-control',
              value: (f.object.format_time if f.object.starts_at) %>

<%= f.hidden_field :user_id,
              required: true,
              value: current_user.id %>

<%= f.hidden_field :patient_id,
              required: true,
              value: patient.id %>

<%= f.hidden_field :form, 
              value: "booking_form" %>

<%= f.submit "Save", class: 'btn btn-primary' %>
