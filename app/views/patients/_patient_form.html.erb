

<%= simple_form_for @patient, html: { class: 'form-inline' } do |f| %>
  <%= f.input :first_name, required: true %> 
  <%= f.input :middle_name %>
  <%= f.input :last_name, required: true %>
  <%= f.input :dob, label: "Date of Birth",
                    as: :string,
                    start_year: Date.today.year - 90,
                    end_year: Date.today.year,
                    order: [:month, :day, :year], required: true, required: true %>
  <%= f.input :address %>
  <%= f.input :phone_number, label: "Phone number" %>
  <%= f.input :user_id, as: :hidden,
                        input_html: { value: current_user.id },
                        required: true %>

  <br>
  <%= f.button :submit, "Save", class: "btn btn-success" %>
<% end %>