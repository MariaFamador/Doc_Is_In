
<div class="patient_show_page">
  <table class="table table-hover">
    <tbody>
      <tr>
        <td>Last Name</td>
        <td><%= @patient.last_name %></td>
      </tr>
      <tr>
        <td>First Name</td>
        <td><%= @patient.first_name %></td>
      </tr>
      <tr>
        <td>Start Date</td>
        <td><%= @patient.created_at.strftime("%Y %B %d") %></td>
      </tr>
      <tr>
        <td>Age</td>
        <td><%= @patient.age %></td>
      </tr>
      <tr>
        <td>Date of Birth</td>
        <td><%= @patient.dob.strftime("%Y %B %d") %></td>
      </tr>
       <tr>
        <td>Address</td>
        <td><%= @patient.address %></td>
      </tr>
       <tr>
        <td>Phone Number</td>
        <td><%= @patient.phone_number %></td>
      </tr>
    </tbody>
  </table>
</div>

<div class="pull-right">
  <%= link_to "Patient List", patients_path, class: "btn btn-primary" %>
  <%= link_to "Edit Details", edit_patient_path(@patient.id), class: 'btn btn-primary' %>
</div>
