<br>
<% if @patient.appointments.empty? %>
  <h3>No appointments have been scheduled.</h3>
<% else %>
    <%= simple_form_for @patient, url: patient_path(@patient, tab: 'doctors_notes'), method: :patch do |f| %>
    
    <%= f.simple_fields_for :appointments, @appointments do |m| %>
      <%= m.input :notes, label: "#{m.object.format_date} - #{m.object.status}" %>
    <% end  %>

    <br>
    <%= f.button :submit, class: 'btn btn-primary' %>
  <% end %>
<% end %>

