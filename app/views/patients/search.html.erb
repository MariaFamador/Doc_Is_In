
<% if current_user.patients.empty? %>
  No match found.
<% else %>
  <div class='search-result'>
    <table class='table table hover'>
      <thead>
        <tr>
          <th>ID</th>
          <th>Patient</th>
          <th>Date of Birth</th>
          <th>Address</th>
          <th><center>Actions</center></th>
        </tr>
      </thead>
      <tbody>
      <% @patients.each do |patient| %>
        <tr>
          <td><%= patient.id %>
          <td><%= link_to "#{patient.full_name}", patient_path(patient.id) %></td>
          <td><%= patient.dob%></td>
          <td><%= patient.address%></td>
          <td>
            <center>
            <%= link_to "Book Appointment", new_appointment_path(patient_id: patient.id), class: 'btn btn-success' %>
            </center>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
<% end %>