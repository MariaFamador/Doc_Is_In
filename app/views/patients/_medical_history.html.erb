<br>
<div id='medical_history'>

  <%= simple_form_for @patient, url: patient_path(@patient, tab: "medical-history") do |f| %>

    <%= f.simple_fields_for :medical_history do |m| %>
      <%= m.input :allergies, collection: @allergies, input_html: { class: 'form-select', multiple: true } %>
      <%= m.input :previous_diseases, collection: @previous_diseases, input_html: { class: 'form-select', multiple: true } %>
      <%= m.input :medication_and_supplements, label: "Medication and Supplements", hint: 'medication or supplement and dosage' %>
      <%= m.input :surgery_and_hospitalization, label: "Surgeries and Hospitalization", hint: 'illness - including dates' %>
      <%= m.input :family_history, hint: 'state condition and relationship' %>

    <% end %>
    <br>
    <%= f.button :submit, "Save", class: 'btn btn-primary' %>
  <% end %>

</div>

