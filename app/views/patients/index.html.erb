<h3>Patient index for Dr. <%= current_user.last_name %></h3>
<br><br>


<% if @patients.empty? %>
  <h4>There are no patient records to date</h4>
<% else %>
  <div class='patient_records_table'>
    <table class='table table-hover'>
      <thead>
        <tr>
          <th>Patient ID</th>
          <th>Last Name</th>
          <th>First Name</th>
          <th>Record Created</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
      <% @patients.each do |patient| %>
        <tr>
          <td><%= patient.id %></td>
          <td><%= patient.last_name %></td>
          <td><%= patient.first_name %></td>
          <td><%= patient.created_at.strftime("%Y %B %d") %></td>
          <td>
              <%= link_to "View Profile", patient_path(patient.id), class: 'btn btn-success' %>
              <%= link_to "Edit", edit_patient_path(patient.id), class: 'btn btn-primary' %>
              <%= link_to "Delete", patient_path(patient.id), method: :delete, class: 'btn btn-danger' %>
          </td>
        </tr> 
      <% end %>
      </tbody>
    </table>
  </div>
<% end %>

<%= link_to "Add Patient", new_patient_path, class: "btn btn-primary pull-right" %>


