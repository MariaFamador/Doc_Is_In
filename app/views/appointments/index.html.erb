
<% if current_user.appointments.empty? %>
  You have no scheduled appointments.
<% else %>
  <div id='appointments-table'>
  <table class='table table-hover'>
    <thead id='user-appointment-index-header'>
      <tr>
        <th>Schedule</th>
        <th>Patient Name</th>
        <th><center>Actions</center></th>
      </tr>
    </thead>
    <tbody id='user-appointment-index-body'>
    <% current_user.appointments.each do |appointment| %>
      <tr>
          <% patient = appointment.patient %>
          <td><%= appointment.appointment_date %></td>
          <td><%=  "#{patient.last_name}, #{patient.first_name}" %></td>
          <td>
            <%= link_to "View Patient", patient_path(patient), class: 'btn btn-primary' %>
            <%= link_to "Edit Appointment", edit_appointment_path(patient), class: 'btn btn-primary' %>
          </td>
      </tr>
    <% end %>
    </tbody>
  </table>
  </div>
 
<% end %>
  
  
 
