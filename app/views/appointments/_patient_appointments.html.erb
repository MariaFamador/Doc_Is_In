<div>
  <%= link_to "Book Appointment", new_appointment_path(patient_id: @patient.id), class: 'btn btn-success btn-sm' %>
</div>
<br>

<div>
  <% appointments = @patient.appointments %>
  <% if appointments.empty? %>
    <h3>No appointments have been scheduled.</h3>
  <% else %>
    <div class="patient-appointments-table" %>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Date</th>
            <th width="45%">Time</th>
            <th width="30%">Status</th>
          </tr>
        </thead>
        <tbody>
        <% appointments.order(:starts_at).each do |appointment| %>
          <tr>
            <td>
              <%= link_to edit_appointment_path(appointment) do %>
                <i class="glyphicon glyphicon-pencil"></i>
              <% end %>
              <%= link_to cancel_appointment_path(appointment.id, tab: "patient-appointments" ), method: :patch do %>
                <i class="glyphicon glyphicon-remove"></i>
              <% end %>
              <%= "#{appointment.format_date}" %>
            </td>
            <td><%= appointment.format_time %></td>
            <td><%= appointment.status %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>