
<%= link_to "Book Appointment", new_appointment_path(patient_id: @patient.id), class: 'btn btn-success' %>

<div>
  <% appointments = @patient.appointments %>
  <% if appointments.empty? %>
    No appointments have been scheduled.
  <% else %>
    <div class="patient-appointments-table" %>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Date</th>
            <th width="23%">Time</th>
            <th width="55%">Actions</th>
          </tr>
        </thead>
        <tbody>
        <% appointments.order(:starts_at).each do |appointment| %>
          <tr>
            <td><%= appointment.format_date %></td>
            <td><%= appointment.format_time %></td>
            <td>
              <%= link_to "Edit Appointment", edit_appointment_path(appointment), class: 'btn btn-primary' %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>